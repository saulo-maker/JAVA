public class jurosSimples {
	
	double capital = 1000;
	double juros = 6;
	int tempoAplicacao = 5;
	
	public double calculoJurosSimples() {
		/*This method obtains interest per month*/
		capital = capital / tempoAplicacao;
		juros = juros / 100 * capital;
		return (capital + juros) * tempoAplicacao;
	}
}

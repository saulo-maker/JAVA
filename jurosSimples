public class jurosSimples {
	
	double capital = 1000;
	double taxaJuros;
	double juros = 6;
	int tempoAplicacao = 5;
	double result;
	
	public void calculoJurosSimples() {
		capital = capital / tempoAplicacao;
		juros = juros / 100 * capital;
		result = (capital + juros) * tempoAplicacao;
		System.out.print(result);
	}
}
